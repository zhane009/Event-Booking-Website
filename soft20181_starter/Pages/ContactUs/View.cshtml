@page
@model soft20181_starter.Pages.ContactUs.ViewContactsModel
@{
    ViewData["Title"] = "View All Contact Messages";
}

<br />
<br />
@if (Model.delete)
{
    <div class="alert alert-success" role="alert">
        Contact message deleted successfully!
    </div>
    Model.delete = false;
}

else if (Model.edited)
{
    <div class="alert alert-success" role="alert">
        Message edited successfully!
    </div>
    Model.edited= false;
}
<div classs="event-details">
    <div class="details-details">

        <h2>View All Contact Messages</h2>
        <table class="table">

            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Email</th>
                    <th scope="col">Message</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var contact in Model.ContactsInfo)
                {
                    <tr>
                        <th scope="row">@contact.Id</th>
                        <td>@contact.FirstName</td>
                        <td>@contact.LastName</td>
                        <td>@contact.Phone</td>
                        <td>@contact.Email</td>
                        <td>@contact.Message</td>
                        <td>
                            <a asp-page="Edit" asp-route-id="@contact.Id">
                                <button class="btn btn-primary">
                                    Edit
                                </button>
                            </a>
                            <a asp-page="Edit" asp-page-handler="delete" asp-route-id="@contact.Id">
                                <button class="btn btn-danger">
                                    Delete
                                </button>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>
