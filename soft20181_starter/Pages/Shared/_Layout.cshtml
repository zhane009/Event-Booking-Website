    <nav class="navbar navbar-light fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-page="/Index">
                <img src="~/images/logo.jpg" alt="" width="30" height="24" class="d-inline-block align-text-top">
            </a>
            <button class="navbar-toggler navbar_btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                    @{
                        if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <h5 class="offcanvas-title" id="offcanvasNavbarLabel">
                                ADMIN MENU
                            </h5>
                        }
                        else
                        {
                            <h5 class="offcanvas-title" id="offcanvasNavbarLabel">
                                MENU
                            </h5>
                        }
                    }
                    
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        <li class="navbar_item">
                            <a class="navbar_btn" aria-current="page" asp-page="/Index">Home</a>
                        </li>
                        @{
                            if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <li class="navbar_item dropdown align-self-center">
                                    <a class="navbar_btn dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                         All Events
                                    </a>
                                    <ul class="dropdown-menu navbar_item bg-transparent border-0" aria-labelledby="navbarDropdown">
                                        <li class="navbar_item"><a class="navbar_btn" asp-page="/AllEvents/Index">Normal View</a></li>
                                        <li class="navbar_item"><a class="navbar_btn" asp-page="/AllEvents/Add">Add</a></li>
                                        <li class="navbar_item"><a class="navbar_btn" asp-page="/AllEvents/View">Admin View</a></li>
                                    </ul>
                                </li>
                                <li class="navbar_item dropdown align-self-center">
                                    <a class="navbar_btn dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Contact Us
                                    </a>
                                    <ul class="dropdown-menu navbar_item bg-transparent border-0" aria-labelledby="navbarDropdown">
                                        <li class="navbar_item"><a class="navbar_btn" asp-page="/ContactUs/Index">Normal View</a></li>
                                        <li class="navbar_item"><a class="navbar_btn" asp-page="/ContactUs/View">Admin View</a></li>
                                    </ul>
                                </li>
                                <li class="navbar_item">
                                    <a class="navbar_btn" asp-page="/AdminPortal">Admin Portal</a>
                                </li>
                            }
                            else {
                                <li class="navbar_item">
                                    <a class="navbar_btn" asp-page="/AllEvents/Index">Events</a>
                                </li>
                                <li class="navbar_item">
                                    <a class="navbar_btn" asp-page="/ContactUs/Index">Contact Us</a>
                                </li>
                            }
                        }

                        <partial name="_LoginPartial" />
                        <li class="navbar_item">

                            <a id="controlButton" class="navbar_btn">
                                Customise
                            </a>
                            <div class="control">
                                <div class="buttons showControl-animation">
                                    <div class="column">
                                        <div class="control-row">
                                            <button style="background-color: skyblue; color: dodgerblue"></button>
                                            <button style="background-color: yellow; color: orange"></button>
                                            <button style="background-color: #ff004e; color: #ff8d00"></button>

                                        </div>

