@using Microsoft.AspNetCore.Identity
@using soft20181_starter.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="navbar_item">
        <a class="navbar_btn" id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="navbar_item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <a id="logout" type="submit" class="navbar_btn border-0">
                <button class="border-0 bg-transparent">Logout</button>
            </a>
        </form>
    </li>
    <li>
        <a class="navbar_btn" asp-page="/Bookings/View">View My Bookings</a>
    </li>
}
else
{
    <li class="navbar_item">
        <a class="navbar_btn" class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="navbar_item">
        <a class="navbar_btn" class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}

